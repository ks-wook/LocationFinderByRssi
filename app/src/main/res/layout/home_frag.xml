<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/corner_round_white">

        <Button
            android:id="@+id/ms_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search MainStation" />

        <Button
            android:id="@+id/ms_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send" />

        <Button
            android:id="@+id/ms_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DisConnect" />

        <Button
            android:id="@+id/ms_service_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StartService" />

        <Button
            android:id="@+id/ms_service_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StopService" />


        <Button
            android:id="@+id/bluetooth_register_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RegisterRoom" />

        <Button
            android:id="@+id/bluetooth_register_beacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RegisterBeacon"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>